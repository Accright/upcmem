<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/itembg">
    <LinearLayout
        android:id="@+id/itemup"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/methodimg"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记录"
            android:textColor="@color/base_color_text_black"/>
    </LinearLayout>
    <View
        android:id="@+id/itemline"
        android:layout_alignBottom="@id/itemup"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/itemline" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/itemline"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/dayornight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/listdetailloc"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ceshi ..."
                android:id="@+id/listdetailkind"
                android:textColor="#858282"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="测试、、、"
                android:textColor="#858282"
                android:id="@+id/timetext" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="30dp"
                android:layout_alignRight="@+id/linearLayout"
                android:id="@+id/listdetailnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:layout_weight="1"
                android:singleLine="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="40dp">
                <TextView
                    android:id="@+id/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="20sp"
                    android:textColor="@color/base_color_text_black"/>
                <TextView
                    android:id="@+id/methodtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textColor="#858282"
                    android:text="现金"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>